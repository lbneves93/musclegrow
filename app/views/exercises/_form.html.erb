<%= form_with model: exercise do |form| %>
  <div class="form-group">
    <%= form.label :exercise_category %>
    <%= form.select :exercise_category_id, category_options, {}, class: "form-select mt-2" %>
    <% exercise.errors.full_messages_for(:exercise_category_id).each do |message| %>
      <div class="field-message"><%= message %></div>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control", placeholder: 'Enter the name' %>
    <% exercise.errors.full_messages_for(:name).each do |message| %>
      <div class="field-message"><%= message %></div>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :image_url %>
    <%= form.text_field :img_url, class: "form-control", placeholder: 'Enter the image url' %>
    <% exercise.errors.full_messages_for(:img_url).each do |message| %>
      <div class="field-message"><%= message %></div>
    <% end %>
  </div>

  <div class="exercise-submit">
    <a class="btn btn-secondary" href="/exercises">Back</a>
    <%= form.submit 'Save', class: "btn btn-main" %>
  </div>
<% end %>